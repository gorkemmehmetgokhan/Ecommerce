@using Ecommerce.Entity;
@model IEnumerable<User>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>      
        <th>@Html.DisplayNameFor(t => t.Fullname)</th>
        <th>@Html.DisplayNameFor(t => t.Username)</th>
        <th>@Html.DisplayNameFor(t => t.Email)</th>       
        <th>@Html.DisplayNameFor(t => t.Gender)</th>
        <th>@Html.DisplayNameFor(t => t.Password)</th>
        <td><b>Edit</b></td>
       
    </tr>
    @foreach (User item in Model)
    {
        <tr>                       
            <td>@Html.DisplayFor(t => item.Fullname)</td>
            <td>@Html.DisplayFor(t => item.Username)</td>
            <td>@Html.DisplayFor(t => item.Email)</td> 
            <td>@Html.DisplayFor(t => item.Gender)</td> 
            <td>@Html.DisplayFor(t => item.Password)</td>      
            <td>             
                @Html.ActionLink("Delete", "Delete", null, new { @id = item.UserId ,@class="btn btn-danger" })
            </td>
        </tr>
    }
</table>
