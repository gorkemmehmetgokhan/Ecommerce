@using Ecommerce.Entity;
@model IEnumerable<Category>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <p>@ViewBag.Mesaj</p>
</div>
<table class="table table-hover">
    <tr class="active">
        <td>@Html.DisplayNameFor(t => t.CategoryName)</td>
        <td>@Html.DisplayNameFor(t => t.Description)</td>
        <td>Edit</td>
    </tr>
    @foreach (Category item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>
                <a href="~/Admin/Category/Edit/@item.CategoryId" class="btn btn-success">Edit</a>
                @Html.ActionLink("Delete", "Delete",null, new { @id = item.CategoryId, @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
