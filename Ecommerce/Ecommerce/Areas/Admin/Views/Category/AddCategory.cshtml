@using Ecommerce.Entity;

@{
    ViewBag.Title = "Add Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div>
        <label>@ViewBag.Mesaj</label>
    </div>
    <table class="table table-hover">
        <tr>
            <td><label for="inputKategoriAdi">CategoryName</label></td> 
            <td><input type="text" class="form-control" id="inputKategoriAdi" name="CategoryName" placeholder="Kategori adı giriniz"></td>
        </tr>
        <tr>
            <td><label for="inputKategoriAdi">Kategori Tanımı</label></td>
            <td><input type="text" class="form-control" id="inputKategoriTanimi" name="Description" placeholder="Kategori tanımı giriniz"></td>
        </tr>
        <tr>
            <td><label for="selectKategori">Parent Kategori</label></td>
            <td>
                <select name="ParentId" class="form-control input-medium m-bot15">
                    @foreach (Category ktg in ViewBag.Categories)
                {
                        <option value="@ktg.CategoryId">@ktg.CategoryName</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Save" class="btn btn-success" />
            </td>
        </tr>
    </table>
}

