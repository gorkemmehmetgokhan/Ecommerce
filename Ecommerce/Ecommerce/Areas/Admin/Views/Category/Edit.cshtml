@using Ecommerce.Entity

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <input name="CategoryId" value="@Model.CategoryId" class="hide" />
    <table class="table table-hover">
        <tr>
            <td><label for="inputKategoriAdi">CategoryName</label></td> 
            <td><input type="text" class="form-control" id="inputKategoriAdi" name="CategoryName" value="@Model.CategoryName" placeholder="Kategori adı giriniz"></td>
        </tr>
        <tr>
            <td><label for="inputKategoriAdi">Description</label></td>
            <td><input type="text" class="form-control" id="inputKategoriTanimi" name="Description" value="@Model.Description" placeholder="Kategori tanımı giriniz"></td>
        </tr>
        <tr>
            <td><label for="selectKategori">Parent Kategori</label></td>
            <td>
                <select name="ParentID" class="form-control input-medium m-bot15">
                    @foreach (Category ktg in ViewBag.Categories)
                    {
                        if (ktg.CategoryId == Model.ParentId)
                        {
                            <option selected="selected" value="@ktg.CategoryId">@ktg.CategoryName</option>
                        }
                        else
                        {
                            <option value="@ktg.CategoryId">@ktg.CategoryName</option>
                        }
                    }
                </select>

            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Save" class="btn btn-success" />
            </td>
        </tr>
    </table>

}


