@using Ecommerce.Entity;
@model IEnumerable<Brand>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(t => t.BrandName)</th>
        <th>@Html.DisplayNameFor(t => t.Description)</th>
        <th>@Html.DisplayNameFor(t => t.Photo)</th>
        <th>Edit</th>
    </tr>
    @foreach (Brand item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(t => item.BrandName)</td>
            <td>@Html.DisplayFor(t => item.Description)</td>
            <td><img src="~/Images/@item.Photo" class="pro-img-box" style="width:100px" height="100" /></td>
            <td>    
                <a href="~/Admin/Brand/Edit/@item.BrandId" class="btn btn-success">Edit</a>
                <a href="~/Admin/Brand/Delete/@item.BrandId" class="btn btn-danger">Delete</a>        
            </td>
        </tr>
    }
</table>
